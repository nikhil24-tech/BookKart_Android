<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookkart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookKart.NoActionBar">
        <activity
            android:name="com.example.bookkart_android.AddEditBookActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bookkart_android.AdminActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bookkart_android.SignUpOptionsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bookkart_android.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bookkart_android.SignInActivity"
            android:exported="false" />
        <activity android:name="com.example.bookkart_android.MainActivity" />
        <activity
            android:name="com.example.bookkart_android.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>